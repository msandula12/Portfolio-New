/* project variables */
fontBody = "Franklin Gothic Medium"
fontHeadings = Verdana
fontColor = #2f2f2f
lightGray = #efefef
darkTeal = #5f968e
mintGreen = #bfdccf
lightRed = #e73a30
blue = #0048c3

/* general styles */

// *
// 	border 1px solid orange

body
	margin 0
	padding 0	
	font-family fontBody
	color fontColor
.page
	display inline-block
	float left
	min-height 500px
	padding 0px
	width 100%
.container
	width 60%
	margin auto
h2
	position absolute
	text-transform uppercase
	font-family fontHeadings
	margin 15px 0px 0px 15px
	font-size 1.4em
h3
	margin-top 15px
	margin-bottom 15px
p
	margin 15px auto
	line-height 1.4em
p a
	color #333
	text-decoration none
p a:hover
	color #3737ba
p > span
	font-size 80%
	font-style italic
.example
	background-color black
	color white
	font-family Consolas
	padding 7px 7px 7px 14px
	margin-bottom 15px

/* page background colors */
#blog
	background-color lightGray
#about
	background-color darkTeal
#portfolio
	background-color mintGreen	
#contact, #footer
	background-color lightRed
.uiblog img 
	width 49%
.oldBlogs
	margin-top 20px
	position absolute
	right 20px
	padding-left 20px
	border-left 1px solid lightgray
.oldBlogs h3
	margin 0px 0px 10px
	text-transform uppercase
.oldBlogs ul 
	margin 0
	padding 0
	list-style-position inside
.oldBlogs li
	line-height 1.4em
.oldBlogs a
	text-decoration none
	color fontColor
.oldBlogs a:hover, .oldBlogs li.active a
	color blue
.entry
	display none
.entry.active 
	display block

/* header */
header 
	height 100vh
	background-image url("images/bkgd.jpg")
	background-size cover
	display flex
	flex-direction column
	justify-content center
	align-items center
#head
	width 100%
	padding 15px 0px
	background-color rgba(0, 0, 0, 0.6)
h1, header p
	width 60%
	color lightGray
h1
	margin 30px auto 0px
	text-align center

/* navigation bar */
#navigation 
	width 60%
	margin 0px auto
.navFixed
	position fixed
	left 0
	right 0
	top 0
	min-width 100%
	background-color rgba(0, 0, 0, 0.6)
	padding 5px 0px 20px
h4
	margin 0px
	word-spacing 20px
	text-transform uppercase
	font-family fontHeadings
	text-align center
	letter-spacing 1px
.navRow
	padding-bottom 8px
	text-decoration none
	color white
.navRow:hover
	border-bottom 5px solid white

/* about page */
#selfie
	float left
	width 140px
	margin-right 15px
	border-radius 100%
.logo
	width 30px
	float left
	margin-right 10px

/* portfolio page */
.projects, .projectsEven
	width 48%
	margin 0px
	display inline-block
	float left
	height 400px
.projectsEven
	float right
.screenshot
	width 100%
.projDescrip
	font-size 85%
.contactMe
	margin-top 30px
.contactMe h3 
	margin-bottom 30px
	
/* contact page */
#contact
	min-height 300px
.socialPages
	text-decoration none
	color fontColor
.socialPages:hover
	color blue
		
/* footer */
#footer
	width 100%
#footer > p
	margin 0 auto
	padding-bottom 10px
	text-align center

/* scroll-to-top button */
.scrollToTop
	position fixed
	width 40px
	right 2%
	bottom 2%
	cursor pointer
	display none
	border-radius 8px
	box-shadow 1px 1px 8px fontColor
.scrollToTop:hover
	background-color white
	
/* media queries */
@media (max-width 950px)
	h2
		position relative
		width 100%
	.container, #head *
		width 70%
	#navigation 
		width 100%
@media (max-width 700px)
	.container, #head *
		width 80%
@media (max-width 500px)
	.container, #head *
		width 100%
		box-sizing border-box
		-moz-box-sizing border-box
		-webkit-box-sizing border-box
		padding 0px 15px
	h2
		width 80%
	#about > h2
		margin-bottom 15px
	#about p 
		margin-top 0px
	.projects, .projectsEven
		width 100%
		height 460px
	.scrollToTop
		background-color white
		opacity 0.7
	.scrollToTop:hover
		opacity 1